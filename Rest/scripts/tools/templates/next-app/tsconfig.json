{
  "extends": "../../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "ui": ["../../libs/ui/src/index.ts"],
      "auth": ["../../libs/auth/src/index.ts"],
      "database": ["../../libs/database/src/index.ts"],
      "utils": ["../../libs/utilities/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../libs/**/*.ts",
    "../../libs/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "jest.config.js",
    "jest.setup.js",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.stories.ts",
    "**/*.stories.js"
  ]
}
