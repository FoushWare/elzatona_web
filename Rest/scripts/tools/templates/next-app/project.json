{
  "name": "{{app-name}}",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/{{app-name}}/src",
  "projectType": "application",
  "tags": ["type:app", "scope:{{app-name}}"],
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/{{app-name}}"
      },
      "configurations": {
        "development": {
          "outputPath": "dist/apps/{{app-name}}"
        },
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "{{app-name}}:build",
        "dev": true,
        "port": 3000
      },
      "configurations": {
        "development": {
          "buildTarget": "{{app-name}}:build:development",
          "dev": true,
          "port": 3000
        },
        "production": {
          "buildTarget": "{{app-name}}:build:production",
          "dev": false,
          "port": 3000
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "{{app-name}}:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/{{app-name}}/jest.config.js",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "coverageReporters": ["text"]
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/{{app-name}}/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
