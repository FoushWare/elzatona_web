{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": []
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/test-setup.ts"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
