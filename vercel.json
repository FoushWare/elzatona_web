{
  "buildCommand": "npx nx build website",
  "outputDirectory": "apps/website/.next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "devCommand": "npx nx serve website",
  "functions": {
    "apps/website/src/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
