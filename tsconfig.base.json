{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/website/src/*"],
      "ui": ["./libs/ui/src/index.ts"],
      "auth": ["./libs/auth/src/index.ts"],
      "database": ["./libs/database/src/index.ts"],
      "@elzatona/database": ["./libs/database/src/index.ts"],
      "@elzatona/database/client": ["./libs/database/src/client.ts"],
      "@elzatona/utilities": ["./libs/utilities/src/index.ts"],
      "@elzatona/utilities/client": ["./libs/utilities/src/client.ts"],
      "@elzatona/utilities/server": ["./libs/utilities/src/server.ts"],
      "@elzatona/common-ui": ["./libs/common-ui/src/index.ts"],
      "@elzatona/contexts": ["./libs/contexts/src/index.ts"],
      "@elzatona/hooks": ["./libs/hooks/src/index.ts"],
      "@elzatona/shared-atoms": ["./libs/shared-atoms/src/index.ts"],
      "@elzatona/types": ["./libs/types/src/index.ts"]
    }
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "libs/**/*.ts",
    "libs/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests/**/*",
    "scripts-backup/**/*",
    "apps/admin/Utils/scripts/**/*",
    "apps/website/src/scripts/**/*",
    "apps/admin/Utils/scripts/firebase/**/*",
    "Rest/**/*",
    "**/*.stories.tsx",
    "**/*.stories.ts",
    "**/*.example.ts",
    "apps/website/utilities/api-config.example.ts"
  ]
}
