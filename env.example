# Admin Configuration
# Copy this file to .env and fill in your values
# Most values have sensible defaults for development

# JWT Configuration (REQUIRED for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h

# Admin Ports (Optional - defaults provided)
ADMIN_PORT=3001
WEB_PORT=3000

# Admin URLs (Optional - defaults provided)
ADMIN_URL=http://localhost:3001
WEB_URL=http://localhost:3000
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# Admin API Configuration (Optional - defaults provided)
ADMIN_API_BASE_URL=http://localhost:3001/api
ADMIN_API_TIMEOUT=10000

# Initial Admin Credentials (for setup only)
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=your-secure-admin-password
INITIAL_ADMIN_NAME=Super Admin
INITIAL_ADMIN_ROLE=super_admin

# Test Credentials (for testing)
TEST_ADMIN_EMAIL=test@example.com
TEST_ADMIN_PASSWORD=test-password

# Security Configuration
BCRYPT_SALT_ROUNDS=12
ADMIN_SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Database Configuration
ADMIN_COLLECTION_NAME=admins

# Feature Flags
ALLOW_ADMIN_CREATION=true
REQUIRE_EMAIL_VERIFICATION=false
ENABLE_AUDIT_LOGGING=true

# Firebase Configuration (if not using separate firebase config)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id
