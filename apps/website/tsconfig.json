{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./lib/*"],
      "@/context/*": ["./src/context/*"],
      "@/components/*": ["./src/app/Components/*"],
      "@/providers/*": ["./providers/*"],
      "@/types/*": ["./src/app/Types/*"],
      "@/test-utils/*": ["../../libs/utilities/src/lib/test-utils/*"],
      "@/translations/*": ["./translations/*"],
      "@/utils/*": ["./src/app/utils/*"],
      "@/config/*": ["./config/*"],
      "@/middleware": ["./middleware.ts"],
      "@/admin.config": ["./admin.config.ts"],
      "ui": ["../../libs/ui/src/index.ts"],
      "auth": ["../../libs/auth/src/index.ts"],
      "database": ["../../libs/database/src/index.ts"],
      "utils": ["../../libs/utilities/src/index.ts"],
      "@elzatona/contexts": ["../../libs/contexts/src/index.ts"],
      "@elzatona/common-ui": ["../../libs/common-ui/src/index.ts"],
      "@elzatona/hooks": ["../../libs/hooks/src/index.ts"],
      "@elzatona/types": ["../../libs/types/src/index.ts"],
      "@elzatona/utilities": ["../../libs/utilities/src/index.ts"],
      "@elzatona/utilities/client": ["../../libs/utilities/src/client.ts"],
      "@elzatona/shared-atoms": ["../../libs/shared-atoms/src/index.ts"],
      "@elzatona/database": ["../../libs/database/src/index.ts"],
      "@elzatona/database/repositories/interfaces/ICategoryRepository": [
        "../../libs/database/src/repositories/interfaces/ICategoryRepository.ts"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../libs/**/*.ts",
    "../../libs/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "jest.config.js",
    "jest.setup.js",
    "apps/admin/Utils/scripts/**/*",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.example.ts",
    "utilities/api-config.example.ts",
    "tests/**/*",
    "**/tests/**/*"
  ]
}
