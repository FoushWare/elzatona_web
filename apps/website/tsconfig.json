{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "baseUrl": ".",
    "typeRoots": ["../../node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["./lib/*"],
      "@/context/*": ["./context/*"],
      "@/components/*": ["./components/*"],
      "@/providers/*": ["./providers/*"],
      "@/types/*": ["./types/*"],
      "@/test-utils/*": ["./test-utils/*"],
      "@/translations/*": ["./translations/*"],
      "@/utils/*": ["./utils/*"],
      "@/config/*": ["./config/*"],
      "@/middleware": ["./middleware.ts"],
      "@/admin.config": ["./admin.config.ts"],
      "ui": ["../../libs/ui/src/index.ts"],
      "auth": ["../../libs/auth/src/index.ts"],
      "database": ["../../libs/database/src/index.ts"],
      "utils": ["../../libs/utilities/src/index.ts"],
      "@elzatona/contexts": ["../../libs/contexts/src/index.ts"],
      "@elzatona/components": ["../../libs/components/src/index.ts"],
      "@elzatona/hooks": ["../../libs/hooks/src/index.ts"],
      "@elzatona/types": ["../../libs/types/src/index.ts"],
      "@elzatona/shared-atoms": ["../../libs/shared-atoms/src/index.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../libs/**/*.ts",
    "../../libs/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "jest.config.js",
    "jest.setup.js",
    "apps/admin/Utils/scripts/**/*",
    "**/*.spec.ts",
    "**/*.stories.ts",
    "**/*.stories.js"
  ]
}
