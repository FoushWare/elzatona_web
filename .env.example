# Elzatona Web - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# Supabase Configuration
# ============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# Application Environment
# ============================================
# Options: development, test, production
APP_ENV=production
NEXT_PUBLIC_APP_ENV=production

# ============================================
# Admin User Configuration
# ============================================
# Used for creating admin users in the database
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-secure-password-here

# ============================================
# Sentry Configuration (Optional)
# ============================================
# Get from Sentry project settings
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# ============================================
# Vercel Configuration (Optional)
# ============================================
# Used for deployment
VERCEL_URL=
VERCEL_ENV=

# ============================================
# Other Configuration
# ============================================
# Node environment
NODE_ENV=development

# ============================================
# GitGuardian Configuration
# ============================================
# Get your API key from: https://dashboard.gitguardian.com/workspace/settings/api-keys
GITGUARDIAN_API_KEY=your-gitguardian-api-key-here
