# Example environment variables for local development
# Copy this file to `.env` and fill in real values before running locally

# Node environment
NODE_ENV=development

# Database
DATABASE_URL=postgres://user:password@localhost:5432/elzatona_dev

# API keys / secrets
API_KEY=change_me
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=change_me

# Other example values
PORT=3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
# Elzatona Web - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ============================================
# Supabase Configuration
# ============================================
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ============================================
# Firebase Configuration
# ============================================
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=

# ============================================
# Application Environment
# ============================================
# Options: development, test, production
APP_ENV=production
NEXT_PUBLIC_APP_ENV=production

# ============================================
# Admin User Configuration
# ============================================
# Used for creating admin users in the database
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=

# ============================================
# Sentry Configuration (Optional)
# ============================================
# Get from Sentry project settings
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# ============================================
# Vercel Configuration (Optional)
# ============================================
# Used for deployment
VERCEL_URL=
VERCEL_ENV=

# ============================================
# Other Configuration
# ============================================
# Node environment
NODE_ENV=development

# ============================================
# GitGuardian Configuration
# ============================================
# Get your API key from: https://dashboard.gitguardian.com/workspace/settings/api-keys
GITGUARDIAN_API_KEY=
