{
  "name": "zatona-web",
  "version": "1.0.0",
  "description": "A platform for frontend developers to practice coding challenges and prepare for technical interviews",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:check": "next build --turbopack && echo '✅ Build successful' || (echo '❌ Build failed' && exit 1)",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "prepare": "husky"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "firebase": "^12.2.1",
    "lucide-react": "^0.542.0",
    "next": "15.5.1",
    "node-cron": "^4.2.1",
    "puppeteer": "^24.17.1",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
